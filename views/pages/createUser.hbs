{{#if createdUserMessage }}
  <div id="warning" class="ui positive message">
    <i class="close icon"></i>
    <div class="header">
      {{ message }}
    </div>
  </div>
{{/if}}
{{#if createdUserError}}
  <div id="warning" class="ui negative message">
    <i class="close icon"></i>
    <div class="header">
      {{ message }}
    </div>
  </div>
{{/if}}
<form action={{createUser}} method="post" class="ui center form authenticate">

  <div class="ui center aligned basic segment">
    <button class="ui inverted blue animated button">
      <div class="visible content">Se connecter avec Facebook</div>
      <div class="hidden content">
        <i class="facebook large icon"></i>
      </div>
    </button>
    <div class="ui horizontal divider">
      Ou
    </div>

    <h1> Inscrivez un utilisateur </h1>
  </div>
  <div class="field tiny center">
    <label>Nom</label>
    <input type="text" name="lastName" placeholder="Nom">
  </div>

  <div class="field tiny center">
    <label>Prenom</label>
    <input type="text" name="firstName" placeholder="PrÃ©nom">
  </div>

  <div class="field tiny center">
    <label>Email</label>
    <input type="email" name="email" placeholder="Email">
  </div>
  <div class="inline field">
    <label id="admin-label">Est Administrateur : </label>
    <div class="ui toggle checkbox">
      <input name="admin" type="checkbox" tabindex="0" class="hidden">
    </div>
  </div>
  <div class="field">
    <label>Mot de passe</label>
    <input type="password" name="password" placeholder="Mot de passe">
  </div>
  <div class="field">
    <label>Confirmer le mot de passe</label>
    <input type="password" name="confirmedPassword" placeholder="Confirmation mot de passe">
  </div>
  <div class="field">
    <div class="ui checkbox">
      <input type="checkbox" name="checkbox">
      <label>J'accepte les termes d'utilisation.</label>
    </div>
  </div>

  <button type="submit" id="btn-form" class="ui inverted green animated button right">
    <div class="visible content">S'inscrire</div>
    <div class="hidden content">
      <i class="right arrow icon"></i>
    </div>
  </button>
</form>

