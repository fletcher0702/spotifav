

  {{#if errorMessage }}
    <div id="warning" class="ui negative message">
      <i class="close icon"></i>
      <div class="header">
        {{ message }}
      </div>
    </div>
  {{/if}}
  <form action={{signup}} method="post" class="ui center form authenticate">
    <div id="facebook-btn" class="ui center aligned basic segment">
      <a href="http://www.facebook.com" class="ui inverted blue animated button">
        <div class="visible content">Se connecter avec Facebook</div>
        <div class="hidden content">
          <i class="facebook large icon"></i>
        </div>

      </a>
      <div class="ui horizontal divider">
        Ou
      </div>

      <h1> Inscrivez-vous avec votre adresse email </h1>
    </div>
    <div class="field tiny center">
      <label>Nom</label>
      <input required="true" type="text" name="lastName" placeholder="Nom">
    </div>

    <div class="field tiny center">
      <label>Prenom</label>

      <input required="true" type="text" name="firstName" placeholder="Prénom">

    </div>

    <div class="field tiny center">
      <label>Email</label>
      <input required="true" type="email" name="email" placeholder="Email">
    </div>
    <div class="field">
      <label>Mot de passe</label>
      <input required="true" type="password" name="password" placeholder="Mot de passe">
    </div>

  <div class="field">
      <label>Confirmer le mot de passe</label>

      <input required="true" type="password" name="confirmedPassword" placeholder="Confirmation mot de passe">

    </div>
    <div id="attachedSignedUp" class="ui bottom attached message">
      <i class="icon help"></i>
      Déjà inscrit? <a href={{loginAction}}>Connecte toi ici</a> plutôt.
    </div>
    <button type="submit" id="btn-form" class="ui inverted green animated button right">
      <div class="visible content">S'inscrire</div>
      <div class="hidden content">
        <i class="right arrow icon"></i>
      </div>
    </button>
  </form>

